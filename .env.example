# Euclid's Window Environment Variables

# Database (SQLite for local, Postgres for production)
DATABASE_URL=sqlite:///./euclids_window.db
# DATABASE_URL=postgresql://user:password@host:5432/euclids_window

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string
JWT_EXPIRE_HOURS=24

# OpenAI (optional, for LLM fallback)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions
OPENAI_MODEL=gpt-4o-mini

# Debug mode
DEBUG=false
